<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import tpiskorski.vboxcm.ui.control.WatchdogServerAddressServerCellValueFactory?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tpiskorski.vboxcm.ui.controller.watchdog.WatchdogController">


    <fx:define>

        <ContextMenu fx:id="contextMenu">
            <items>
                <MenuItem fx:id="dynamicMenuItem"/>
                <SeparatorMenuItem/>
                <MenuItem text="Unwatch" onAction="#unwatchVm"/>
            </items>
        </ContextMenu>

    </fx:define>


    <center>
        <TableView fx:id="watchdogTableView">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn text="Active">
                    <cellValueFactory>
                        <PropertyValueFactory property="active"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Server">
                    <cellValueFactory>
                        <WatchdogServerAddressServerCellValueFactory/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="VM">
                    <cellValueFactory>
                        <PropertyValueFactory property="virtualMachine"/>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn text="Backed up by server">
                    <cellValueFactory>
                        <PropertyValueFactory property="watchdogServer"/>
                    </cellValueFactory>
                </TableColumn>
            </columns>

        </TableView>
    </center>

    <bottom>

        <HBox alignment="CENTER">
            <Button text="Watch vm" onAction="#watchVm"/>
            <Button text="Unwatch vm" fx:id="unwatchVmButton" onAction="#unwatchVm"/>
        </HBox>

    </bottom>

</BorderPane>
