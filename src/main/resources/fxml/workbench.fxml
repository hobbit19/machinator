<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.github.tpiskorski.vboxcm.ui.controller.WorkbenchController" fx:id="workbenchPane">
    <top>
        <MenuBar>
            <fx:include source="menu/config/fileMenu.fxml"/>
        </MenuBar>
    </top>
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="VMs">
                    <BorderPane>
                        <left>
                            <VBox>
                                <HBox alignment="CENTER" spacing="5.0">
                                    <Label text="Search:"/>
                                    <TextField fx:id="filterField" HBox.hgrow="ALWAYS"/>
                                </HBox>
                                <ListView VBox.vgrow="ALWAYS" fx:id="serverList" />
                                <HBox alignment="CENTER" spacing="5.0">
                                    <Button text="Add server" onAction="#addServer"/>
                                    <Button text="Remove server" fx:id="removeServerButton" onAction="#removeServer"/>
                                    <Button text="Jobs" onAction="#showJobs"/>
                                </HBox>
                            </VBox>
                        </left>
                        <center>
                            <VBox>
                                <HBox alignment="CENTER">
                                    <Button text="Turn on vm" fx:id="turnOnVmButton" onAction="#turnOnVm"/>
                                    <Button text="Turn off vm" fx:id="turnOffVmButton"/>
                                    <Button text="Power off vm" fx:id="powerOffVmButton"/>
                                    <Button text="Reset vm" fx:id="resetVmButton"/>
                                    <Button text="Remove vm" fx:id="removeVmButton"/>
                                </HBox>

                                <TableView VBox.vgrow="ALWAYS" fx:id="virtualMachines">
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <columns>
                                        <TableColumn text="VM name">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="vmName"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Server">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="server"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="State">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="state"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="CPU cores">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="cpuCores"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn text="Memory">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="ramMemory"/>
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                </TableView>
                            </VBox>

                        </center>

                    </BorderPane>
                </Tab>
                <Tab text="Backup">
                    <fx:include fx:id="barTabPage" source="backups.fxml"/>
                </Tab>
                <Tab text="Watchdog">
                    <fx:include source="watchdog/watchdog.fxml"/>
                </Tab>

            </tabs>

        </TabPane>
    </center>
</BorderPane>

